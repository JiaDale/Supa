<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/common_toolbar"/>

    <EditText
        android:id="@+id/forget_email"
        style="@style/common_edit_text_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin_inner"
        android:layout_marginTop="@dimen/view_margin_inner"
        android:background="@drawable/common_edit_text"
        android:hint="@string/email" />

    <Button
        android:id="@+id/forget_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password" />
</LinearLayout>