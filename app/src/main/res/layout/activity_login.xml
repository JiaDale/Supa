<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480px"
        android:layout_marginBottom="@dimen/view_margin_outer"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/login_test_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测i是使用"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/view_padding"
        android:paddingRight="@dimen/view_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/login_account"
                style="@style/common_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit_text_top"
                android:drawableLeft="@mipmap/login_account"
                android:hint="@string/login_account_null"/>

            <EditText
                android:id="@+id/login_pass"
                style="@style/common_edit_text_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/login_password"
                android:background="@drawable/login_edit_text_bottom"
                android:hint="@string/login_pass_null"/>
        </LinearLayout>

        <RadioButton
            android:id="@+id/login_remember"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/view_margin_inner"
            android:button="@drawable/login_radio_button"
            android:text="@string/remember_pass"
            android:textColor="@color/blue"
            android:textSize="@dimen/text_size_tiny"
            tools:ignore="RtlHardcoded" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/login_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_action"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/view_margin_inner"
            android:layout_marginRight="@dimen/view_margin_inner"
            android:layout_marginTop="@dimen/view_margin_inner"
            android:paddingLeft="@dimen/view_padding"
            android:paddingRight="@dimen/view_padding">

            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/login_register"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size"/>

            <TextView
                android:id="@+id/login_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/login_forget"
                android:textColor="@color/blue"
                android:textSize="@dimen/text_size"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>



