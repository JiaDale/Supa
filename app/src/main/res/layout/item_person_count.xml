<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/view_margin_inner">

    <TextView
        android:id="@+id/person_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/person_count_icon"
        android:layout_width="@dimen/common_toolbar_image"
        android:layout_height="@dimen/common_toolbar_image"
        android:layout_alignParentRight="true"
        android:src="@drawable/person_item_selected"
        android:visibility="invisible"
        android:layout_alignParentEnd="true" />
</RelativeLayout>