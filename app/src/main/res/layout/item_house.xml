<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jdy.supa.module.main.home.brilliant.HouseRecyclerAdapter">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_less">

        <ImageView
            android:id="@+id/house_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_hotel_background"/>

        <ImageView
            android:id="@+id/house_item_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginEnd="@dimen/view_margin_inner"
            android:layout_marginRight="@dimen/view_margin_inner"
            android:layout_marginTop="@dimen/view_margin_outer"
            android:background="@drawable/house_item_collect"
            android:padding="5dp"
            android:src="@drawable/house_collect"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="@dimen/view_margin_inner"
            android:layout_marginLeft="@dimen/view_margin_outer"
            android:layout_marginStart="@dimen/view_margin_outer"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/house_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【张家港】"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/house_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="沙洲湖科创园江帆路8号"
                android:textColor="@color/gray_white"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_outer"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/house_item_user_image"
                android:layout_width="@dimen/item_circle_image"
                android:layout_height="@dimen/item_circle_image"
                android:src="@drawable/temp_hotel_background"/>

            <TextView
                android:id="@+id/house_item_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="小仙女"/>
        </LinearLayout>

        <TextView
            android:id="@+id/house_item_user_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_margin_outer"
            android:lineSpacingExtra="@dimen/view_margin_inner"
            android:maxLines="2"
            android:text="@string/house_item_detail"/>
    </LinearLayout>
</LinearLayout>