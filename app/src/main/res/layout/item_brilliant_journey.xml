<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@id/brilliant_include"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/journey_margin"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/journey_icon"
            android:layout_height="@dimen/journey_icon"
            android:src="@drawable/journey_compensate"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/journey_compensate"
            android:textSize="@dimen/text_size_tiny"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_compensate_detial"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_tiny_more"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/journey_margin"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/journey_icon"
            android:layout_height="@dimen/journey_icon"
            android:src="@drawable/journey_secure"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/journey_secure"
            android:textSize="@dimen/text_size_tiny"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_secure_detial"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_tiny_more"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/journey_margin"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/journey_icon"
            android:layout_height="@dimen/journey_icon"
            android:src="@drawable/journey_customer_service"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/journey_customer_service"
            android:textSize="@dimen/text_size_tiny"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_customer_service_detial"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_tiny_more"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/journey_margin"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/journey_icon"
            android:layout_height="@dimen/journey_icon"
            android:src="@drawable/journey_house"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/journey_house"
            android:textSize="@dimen/text_size_tiny"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_house_detial"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_size_tiny_more"/>
    </LinearLayout>

</LinearLayout>