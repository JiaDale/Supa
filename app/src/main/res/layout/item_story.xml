<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jdy.supa.module.main.home.brilliant.HouseRecyclerAdapter">

    <ImageView
        android:id="@+id/story_item_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:scaleType="centerCrop"
        android:src="@drawable/temp_hotel_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/view_margin_outer"
        android:layout_marginTop="@dimen/view_margin_outer"
        android:background="@drawable/item_text_background"
        android:textColor="@color/white"
        android:text="@string/story"/>

    <TextView
        android:id="@+id/story_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/story_title"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/story_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin_small"
        android:lineSpacingExtra="@dimen/view_margin_inner"
        android:maxLines="2"
        android:text="@string/house_item_detail"/>
</LinearLayout>