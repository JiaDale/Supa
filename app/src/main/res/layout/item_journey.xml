<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jdy.supa.module.main.home.brilliant.StyleRecyclerAdapter">

    <FrameLayout
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height">

        <ImageView
            android:id="@+id/journey_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/temp_hotel_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/journey_item_content_preceding"
                style="@style/Journey_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="趁春光正好"
                android:textSize="@dimen/text_size_large"/>

            <TextView
                android:id="@+id/journey_item_content_next"
                style="@style/Journey_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="　　趁春光正好"
                android:textSize="@dimen/text_size_large"/>

            <TextView
                android:id="@+id/journey_item_location"
                style="@style/Journey_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="苏州"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/journey_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="逗呆萌熊猫"/>
</LinearLayout>