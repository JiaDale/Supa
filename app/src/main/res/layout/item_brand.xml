<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jdy.supa.module.main.home.brilliant.JourneyRecyclerAdapter">

    <ImageView
        android:id="@+id/brand_item_image"
        android:layout_width="@dimen/item_width_height"
        android:layout_height="@dimen/item_width_height"
        android:scaleType="centerCrop"
        android:src="@drawable/temp_hotel_background"/>

    <TextView
        android:id="@+id/brand_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin_top"
        android:text="豪宅"/>

    <TextView
        android:id="@+id/brand_item_subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAOZHAI"/>
</LinearLayout>