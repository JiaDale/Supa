<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_day"
    android:background="@color/main_style"
    android:layout_width="@dimen/item_day_size"
    android:layout_height="@dimen/item_day_size">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/view_padding_tiny_more">

        <FrameLayout
            android:layout_width="@dimen/text_size"
            android:layout_height="@dimen/text_size">

            <TextView
                android:id="@+id/item_day_text"
                android:layout_width="@dimen/text_size"
                android:layout_height="@dimen/text_size"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/item_day_pass_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_pass"
                android:visibility="invisible" />
        </FrameLayout>


        <TextView
            android:id="@+id/item_day_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/view_margin_tiny"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_tiny_more"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_day_rest"
        android:layout_width="@dimen/text_size_tiny"
        android:layout_height="@dimen/text_size_tiny"
        android:layout_gravity="right"
        android:gravity="center"
        android:text="@string/item_day_rest"
        android:textSize="@dimen/text_size_tiny_more" />
</FrameLayout>